#include <stdio.h>
#include <math.h>

int		main(){
  double	x;
  
  printf("Give a positif number, please\n");
  scanf("%la",&x);
  if(x < 0)
    {
      printf("Please, a number bigger than 0\n");
      scanf("%la", &x);
    }
  else if (x > 0)
    printf("The square root of %lf is %lf\n", x, sqrt(x));
  return (1);
}

